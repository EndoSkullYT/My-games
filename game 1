<!DOCTYPE html>
<html>
<head>
    <title>Physics Game</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/matter-js/0.19.0/matter.min.js"></script>
</head>
<body>
    <div id="controls">
        Shape:
        <select id="shapeSelect">
            <option value="rectangle">Rectangle</option>
            <option value="circle">Circle</option>
            <option value="polygon">Polygon</option>
        </select>
        <button onclick="createShape()">Create</button>
    </div>
    <script src="script.js"></script>
</body>
</html>

// Matter.js module aliases
const Engine = Matter.Engine,
      Render = Matter.Render,
      World = Matter.World,
      Bodies = Matter.Bodies,
      Mouse = Matter.Mouse,
      MouseConstraint = Matter.MouseConstraint;

// Create an engine
const engine = Engine.create();

// Get canvas dimensions
const canvasWidth = window.innerWidth;
const canvasHeight = window.innerHeight;

// Create a renderer
const render = Render.create({
    element: document.body,
    engine: engine,
    options: {
        width: canvasWidth,
        height: canvasHeight,
        wireframes: false,
        background: '#EEEEEE'
    }
});

// Create the world
const world = engine.world;

// Add walls
const wallOptions = { isStatic: true, restitution: 0.8 };
const walls = [
    Bodies.rectangle(canvasWidth / 2, 0, canvasWidth, 50, wallOptions),
    Bodies.rectangle(canvasWidth / 2, canvasHeight, canvasWidth, 50, wallOptions),
    Bodies.rectangle(0, canvasHeight / 2, 50, canvasHeight, wallOptions),
    Bodies.rectangle(canvasWidth, canvasHeight / 2, 50, canvasHeight, wallOptions)
];
World.add(world, walls);

// Mouse control
const mouse = Mouse.create(render.canvas);
const mouseConstraint = MouseConstraint.create(engine, {
    mouse: mouse,
    constraint: {
        stiffness: 0.2,
        render: {
            visible: false
        }
    }
});
World.add(world, mouseConstraint);
render.mouse = mouse;

// Set canvas position
render.canvas.width = canvasWidth;
render.canvas.height = canvasHeight;
render.canvas.style.position = 'absolute';
render.canvas.style.top = '0px';
render.canvas.style.left = '0px';

// Shape creation function
function createShape() {
    const shapeType = document.getElementById('shapeSelect').value;
    let body;
    const x = Math.random() * (canvasWidth - 100) + 50;
    const y = 50;
    const options = { restitution: 0.8, friction: 0.1 };

    switch (shapeType) {
        case 'rectangle':
            body = Bodies.rectangle(x, y, 50, 50, options);
            break;
        case 'circle':
            body = Bodies.circle(x, y, 25, options);
            break;
        case 'polygon':
            body = Bodies.polygon(x, y, 6, 25, options); // 6 sides = hexagon
            break;
    }

    World.add(world, body);
}

// Run the engine
Engine.run(engine);

// Run the renderer
Render.run(render);

body {
    margin: 0;
    overflow: hidden;
}

canvas {
    display: block;
}

#controls {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    border-radius: 5px;
    z-index: 100;
}
